h1 Wolf's equipments
p Weapons
ul
   each equipment in equipments
      -if(equipment.attri=="weapon")
         li=equipment.equipment_name + " (" + equipment.attri + ")"
div(id='all_items')
   a(href="#special_items" id="special_items_btn")
   button Special Items
   div(id="special_items" class="items")
      ul
         each equipment in equipments
            -if(equipment.attri=="specialItem")
               li=equipment.equipment_name + " (" + equipment.attri + ")"

   a(href="#backpack_items" id="backpack_items_btn" type="button") Backpack Items
   div(id="backpack_items" class="items")
      ul
         each equipment in equipments
            -if(equipment.attri=="backpackItem")
               li=equipment.equipment_name + " (" + equipment.attri + ")"
         li=wolf.getGoldCrowns()+ " Gold Crowns"